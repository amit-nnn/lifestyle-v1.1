<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/go_back"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:background="@drawable/ic_back"
        android:padding="@dimen/_8sdp"
        android:layout_margin="@dimen/_8sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which Activity?"
        android:textSize="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/goal_friends_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reach out to friend"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:clickable="true"
        android:textSize="@dimen/_16sdp"/>
    <TextView
        android:id="@+id/goal_activity_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eat with family"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:clickable="true"
        android:textSize="@dimen/_16sdp"/>
    <TextView
        android:id="@+id/goal_activity_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Mom"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:clickable="true"
        android:textSize="@dimen/_16sdp"/>
    <TextView
        android:id="@+id/goal_activity_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Dad"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:clickable="true"
        android:textSize="@dimen/_16sdp"/>
    <TextView
        android:id="@+id/goal_activity_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom..."
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:clickable="true"
        android:textSize="@dimen/_16sdp"/>
</LinearLayout>