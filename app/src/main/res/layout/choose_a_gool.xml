<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/go_back"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:background="@drawable/ic_back"
        android:padding="@dimen/_8sdp"
        android:layout_margin="@dimen/_8sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a goal"
        android:textSize="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/goal_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:clickable="true"
        android:textSize="@dimen/_16sdp"/>
    <TextView
        android:id="@+id/goal_build_a_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build a skill"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:clickable="true"
        android:textSize="@dimen/_16sdp"/>
    <TextView
        android:id="@+id/goal_Family_and_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family and friends"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:clickable="true"
        android:textSize="@dimen/_16sdp"/>
    <TextView
        android:id="@+id/goal_me_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Me time"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:clickable="true"
        android:textSize="@dimen/_16sdp"/>
    <TextView
        android:id="@+id/goal_organize_my_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organize my life"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:clickable="true"
        android:textSize="@dimen/_16sdp"/>
</LinearLayout>