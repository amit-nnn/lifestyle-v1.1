<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeFragPage"
    android:background="@color/low_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_back"
            android:backgroundTint="@color/light_red"
            android:orientation="horizontal"
            android:elevation="3dp">
            <TextView
                android:id="@+id/homeFrag_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hi, First_name"
                android:textSize="@dimen/_18sdp"
                android:padding="@dimen/_12sdp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_red"
                android:layout_gravity="center"
                android:padding="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_steps"
                    android:backgroundTint="@color/white"/>
                <TextView
                    android:id="@+id/homeFrag_stepCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:text="3256/5000"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_head"
            android:layout_margin="@dimen/_16sdp"
            android:orientation="horizontal"
            android:elevation="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:padding="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Balance"/>
            <TextView
                android:id="@+id/homeFrag_balMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="242.73$"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:alpha="0.8"
                android:textAlignment="textEnd"
                android:paddingRight="@dimen/_16sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:padding="8dp"
            android:background="@drawable/back_head">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today's Remainder"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="@dimen/_16sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_head"
                android:drawableStart="@drawable/ic_circle"
                android:drawablePadding="8dp"
                android:text="Task-1"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:padding="@dimen/_8sdp"
                android:elevation="3dp"
                android:textStyle="bold"
                android:layout_margin="@dimen/_16sdp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_head"
                android:drawableStart="@drawable/ic_circle"
                android:drawablePadding="8dp"
                android:text="Task-1"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:padding="@dimen/_8sdp"
                android:elevation="3dp"
                android:textStyle="bold"
                android:layout_margin="@dimen/_16sdp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_head"
                android:drawableStart="@drawable/ic_circle"
                android:drawablePadding="@dimen/_8sdp"
                android:text="Task-1"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:padding="@dimen/_8sdp"
                android:elevation="3dp"
                android:textStyle="bold"
                android:layout_margin="@dimen/_16sdp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_head"
                android:drawableStart="@drawable/ic_circle"
                android:drawablePadding="8dp"
                android:text="Task-1"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:padding="@dimen/_8sdp"
                android:elevation="3dp"
                android:textStyle="bold"
                android:layout_margin="@dimen/_16sdp"
                />








        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_16sdp"
            android:elevation="3dp"
            android:paddingBottom="@dimen/_32sdp"
            android:background="@drawable/back_head">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timeline"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_16sdp"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/add_btn"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_add"
                    android:layout_marginRight="@dimen/_26sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/back_head"
                android:layout_margin="@dimen/_10sdp"
                android:elevation="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle"
                    android:layout_gravity="center"
                    android:padding="@dimen/_16sdp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-FEB-2021"
                        android:paddingTop="8dp"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:alpha="0.7"
                        android:textStyle="bold"
                        android:textSize="@dimen/_8sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:text="Title of the blog"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/back_head"
                android:layout_margin="@dimen/_10sdp"
                android:elevation="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle"
                    android:layout_gravity="center"
                    android:padding="@dimen/_16sdp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-FEB-2021"
                        android:paddingTop="8dp"
                        android:paddingLeft="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:alpha="0.7"
                        android:textSize="@dimen/_8sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:text="Title of the blog"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/back_head"
                android:layout_margin="@dimen/_10sdp"
                android:elevation="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle"
                    android:layout_gravity="center"
                    android:padding="@dimen/_16sdp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-FEB-2021"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingLeft="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:alpha="0.7"
                        android:textSize="@dimen/_8sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:padding="@dimen/_8sdp"
                        android:text="Title of the blog"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>





        </LinearLayout>


    </LinearLayout>


</ScrollView>